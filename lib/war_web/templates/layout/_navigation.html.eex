<!-- Sidebar Menu -->
<div class="ui vertical inverted sidebar menu">
  <a class="item" id="home" href="/">Home</a>
  <a class="item" id="info" href="/info">Info</a>
  <%= if logged_in?(@conn) do %>
  <div class="item">
   <span class="ui label" id="current_user"><%= current_user(@conn).username %></span>
   </div>
   <div class="item">
   <%= link "Logout", to: session_path(@conn, :delete), method: :delete, class: "ui button" %>
   </div>
   <% else %>
<%= link "Login",    to: "/login", class: "ui secondary button" %>
<%= link "Sign up", to: user_path(@conn, :new), class: "ui primary button" %>
<% end %>
</div>
